<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.news.newsreaderclient">

    <!-- 文件外部存储读写时需加下面两行权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    -
    <!-- 下两行代码为读写短信权限 -->
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    -
    <!-- 广播接收处理短信权限 -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    -
    <!-- 访问网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    -
    <!-- 接收网络状态权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.news.activity.NewsNavActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.news.activity.NewsMainActivity" />
        <activity android:name="com.example.news.activity.MainContentActivity" />
        <activity android:name="com.example.news.activity.MainLayoutActivity" />
        <activity android:name="com.example.news.activity.TabMainActivity" />
        <activity android:name="com.example.news.activity.ImageActivity" />
        <activity android:name="com.example.news.activity.VedioActivity" />
        <activity android:name="com.example.news.activity.WeatherActivity" />
        <activity android:name="com.example.news.activity.MapActivity" />
        <activity android:name="com.example.news.activity.ImageContentActivity" />
        <activity android:name="com.example.news.activity.ThirdActivity"></activity>
    </application>

</manifest>
